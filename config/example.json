{
  "url": "https://admin.example.com",
  "token": "your-access-token-here",
  "options": {
    "depth": 2,
    "timeout": 10000,
    "headless": true,
    "output": "./menu-test-results",
    "concurrent": 1,
    "retry": 2,
    "skip": "logout,exit,注销,登出",
    "include": "*",
    "screenshots": false,
    "verbose": false
  },
  "tokenInjection": {
    "method": "cookie",
    "name": "access_token"
  },
  "screenshotComparison": {
    "enabled": false,
    "threshold": 0.1,
    "baselineDir": "./screenshots/baseline",
    "diffDir": "./screenshots/diff",
    "updateBaseline": false,
    "failOnDiff": false
  }
} 